<config>    <global>        <models>            <observers>                 <class>Milka_LuxuryTax_Model</class>            </observers>        </models>        <sales>            <quote>                <totals>                    <luxurytax>                        <class>Milka_LuxuryTax_Model_CheckSubtotal</class>                        <after>subtotal</after>                        <before>tax</before>                    </luxurytax>                </totals>            </quote>            <order_invoice>                <totals>                    <luxurytax>                        <class>Milka_LuxuryTax_Model_Invoice</class>                        <after>subtotal</after>                        <before>tax</before>                    </luxurytax>                </totals>            </order_invoice>            <order_creditmemo>                <totals>                    <luxurytax>                        <class>Milka_LuxuryTax_Model_Creditmemo</class>                        <after>subtotal</after>                        <before>tax</before>                    </luxurytax>                </totals>            </order_creditmemo>        </sales>        <helpers>            <luxurytax>                <class>Milka_LuxuryTax_Helper</class>            </luxurytax>        </helpers>        <blocks>            <adminhtml>                <rewrite>                    <sales_order_totals>Milka_LuxuryTax_Adminhtml_Block_Sales_Order_Totals</sales_order_totals>                    <sales_order_invoice_totals>Milka_LuxuryTax_Adminhtml_Block_Sales_Order_Invoice_Totals</sales_order_invoice_totals>                    <sales_order_creditmemo_totals>Milka_LuxuryTax_Adminhtml_Block_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>                </rewrite>            </adminhtml>        </blocks>    </global></config>